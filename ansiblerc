#
# Just make it easier to call ansible and ansible-playbook using ssh.
# Might be possible to do this in the ansible.cfg file, not sure.
#

ANSIBLE_OPTIONS="-u vagrant -c ssh --private-key=~/.vagrant.d/insecure_private_key -s"

alias ans='ansible $ANSIBLE_OPTIONS'
alias pb='ansible-playbook $ANSIBLE_OPTIONS'

#
# Setup the inventory for ansible
#

export ANSIBLE_HOSTS=`pwd`/hosts
